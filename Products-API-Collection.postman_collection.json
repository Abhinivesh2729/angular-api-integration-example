{
  "info": {
    "name": "Products API Collection",
    "description": "Complete CRUD operations for Products API with SQLite database",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "noauth"
  },
  "item": [
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        },
        "description": "Retrieve all products from the database"
      },
      "response": [
        {
          "name": "Success Response",
          "status": "OK",
          "code": 200,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n  \"success\": true,\n  \"data\": [\n    {\n      \"id\": 1,\n      \"title\": \"Wireless Bluetooth Headphones\",\n      \"price\": 1299,\n      \"images\": [\"https://example.com/headphones.jpg\"]\n    }\n  ]\n}"
        }
      ]
    },
    {
      "name": "Get Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "1"]
        },
        "description": "Retrieve a specific product by its ID"
      },
      "response": [
        {
          "name": "Success Response",
          "status": "OK",
          "code": 200,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n  \"success\": true,\n  \"data\": {\n    \"id\": 1,\n    \"title\": \"Wireless Bluetooth Headphones\",\n    \"price\": 1299,\n    \"images\": [\"https://example.com/headphones.jpg\"]\n  }\n}"
        },
        {
          "name": "Product Not Found",
          "status": "Not Found",
          "code": 404,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n  \"success\": false,\n  \"message\": \"Product not found\"\n}"
        }
      ]
    },
    {
      "name": "Add New Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Wireless Bluetooth Headphones\",\n  \"price\": 1299,\n  \"images\": [\"https://example.com/headphones.jpg\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        },
        "description": "Create a new product in the database"
      },
      "response": [
        {
          "name": "Product Created",
          "status": "Created",
          "code": 201,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n  \"success\": true,\n  \"data\": {\n    \"id\": 1,\n    \"title\": \"Wireless Bluetooth Headphones\",\n    \"price\": 1299,\n    \"images\": [\"https://example.com/headphones.jpg\"]\n  },\n  \"message\": \"Product created successfully\"\n}"
        },
        {
          "name": "Validation Error",
          "status": "Bad Request",
          "code": 400,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n  \"success\": false,\n  \"message\": \"Title, price, and images are required\"\n}"
        }
      ]
